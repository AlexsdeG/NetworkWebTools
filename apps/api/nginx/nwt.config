server {
    listen 443 ssl;
    server_name your-domain;

    ssl_certificate /path/to/cert/pem;
    ssl_certificate_key /path/to/cert/key;

    # allow up to 5 MB uploads
    client_max_body_size 5M;

    # Only allow access to API endpoints
    location / {
        # Preflight requests: respond with CORS headers
        if ($request_method = 'OPTIONS') {
            add_header 'Access-Control-Allow-Origin' $http_origin always;
            add_header 'Access-Control-Allow-Methods' 'GET, POST, OPTIONS, PUT, DELETE' always;
            add_header 'Access-Control-Allow-Headers' 'Authorization,Content-Type,Accept' always;
            add_header 'Access-Control-Allow-Credentials' 'true' always;
            add_header 'Access-Control-Max-Age' 1728000 always;
            return 204;
        }

        proxy_pass http://127.0.0.1:64573;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Reflect the request Origin header (API will also validate allowed origins)
        add_header 'Access-Control-Allow-Origin' $http_origin always;
        add_header 'Access-Control-Allow-Credentials' 'true' always;
        add_header 'Access-Control-Allow-Methods' 'GET, POST, OPTIONS, PUT, DELETE' always;
        add_header 'Access-Control-Allow-Headers' 'Authorization,Content-Type,Accept' always;
    }
}

server {
    listen 80;
    server_name your-domain;
    return 301 https://$host$request_uri;
}